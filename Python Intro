def main():
 
  #First Print the Heading
  print("This Program Add Two Numbers") 
   #step 1: prompt the user for the fisrt number
  num1 = int (input("Enter the First number:" ))
   # Step 2: Prompt the user for the second number
  num2 = int(input("Enter the Second number:" ))
   # Step 3: Calculate the sum of the two numbers
  total = num1 + num2
 # Step 4: Print the result with a message
  print(f"The total is {num1} and {num2} is {total}.")


# Call the main function
main()


